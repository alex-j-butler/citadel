%a.dropdown-toggle#navbar-user{ data: { toggle: 'dropdown' }, href: '#' }
  - if impersonating?
    = "#{current_user.name} (#{true_user.name})"
  - else
    = current_user.name
  %span.caret
%ul.navbar-right-menu.dropdown-menu#navbar-user-dropdown
  - present_collection(current_user.teams).each do |team_p|
    %li= team_p.link
  %hr.divider
  %li= link_to('Profile', user_path(current_user))
  %li= link_to('Settings', edit_user_path(current_user))

  - if impersonating?
    %li= link_to('Unimpersonate', user_unimpersonate_path(current_user), method: :post)

  %li= link_to('Logout', logout_user_path)
