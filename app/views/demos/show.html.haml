- content_for(:title) { @demo.map_name }

- demo_p = present(@demo)

- content_for(:jumbo) do
  .map-banner{ style: "background-image: url(#{image_path("map_images/#{@demo.map_name}.png")})" }
    .container
      %h1= demo_p.map_name
      %h2= demo_p.server_name
      %h2= "Played for #{demo_p.duration}"

      %span.download-container
        %h2.download-link= demo_p.download_link title: 'Download Demo'

  .container
    = render 'demos/leaderboard', demo: @demo
