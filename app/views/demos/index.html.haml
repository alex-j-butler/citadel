- content_for(:title) { 'Demos' }

- unless params[:q]
  %h1.tab-header Demos
- else
  %h1.tab-header= "Demos for #{params[:q]}"

.col-sm-3.col-md-3.searchbox.pull-right
  = render 'search'

%hr

.panel.panel-default
  - if @demos.empty?
    .panel-body No demos found...

  - else
    %ul.list-group
      - present_collection(@demos).each do |demo|
        %li.list-group-item
          .row.demo-summary
            = demo.summary
            .pull-right
              = link_to 'Demo Page', demo_path(demo.demo)
          .row.demo-map-duration
            = demo.map_name
            for
            = demo.duration
            .pull-right
              = demo.download_link
          .row.demo-time
            = demo.time_ago

= bootstrap_paginate @demos
